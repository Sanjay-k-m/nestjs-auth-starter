# -------------------------------------------
# Server configuration (Required)
# -------------------------------------------
NODE_ENV=development               # Required. Default: development
PORT=3000                         # Required. Default: 3000

# -------------------------------------------
# JWT secrets and expiration (Required)
# -------------------------------------------
JWT_ACCESS_TOKEN_SECRET=devAccessSecretKey      # Required, no default
JWT_ACCESS_TOKEN_EXPIRES_IN=15m                  # Optional, default 15m
JWT_ACCESS_TOKEN_IGNORE_EXPIRATION=false         # Optional, default false
JWT_REFRESH_TOKEN_SECRET=devRefreshSecretKey    # Required, no default
JWT_REFRESH_TOKEN_EXPIRES_IN=7d                   # Optional, default 7d

# -------------------------------------------
# Mail provider configuration (Required)
# -------------------------------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=dev-email@example.com
MAIL_PASS=dev-email-password
MAIL_FROM=no-reply@dev.example.com

# -------------------------------------------
# CORS configuration (Optional)
# -------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# -------------------------------------------
# Feature toggles (Optional)
# -------------------------------------------
ENABLE_HELMET=true
ENABLE_SWAGGER=true
ENABLE_LOGGING_INTERCEPTOR=true
ENABLE_GLOBAL_VALIDATION_PIPE=true
COMPRESSION_ENABLED=true
ENABLE_THROTTLE=false

# -------------------------------------------
# Compression settings (Optional)
# -------------------------------------------
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# -------------------------------------------
# Throttler (rate limiter) settings (Optional)
# -------------------------------------------
THROTTLE_TTL_MS=60000
THROTTLE_LIMIT=10
THROTTLE_BLOCK_DURATION_MS=300000

# -------------------------------------------
# API Versioning (Optional)
# -------------------------------------------
API_DEFAULT_VERSION=1
